@using TeliaCore.HtmlHelpers
@inherits System.Web.Mvc.WebViewPage
             
              
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" content=""/>
    <title>@ViewBag.Title</title>
   	
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Kalenders/dhtmlxscheduler.css")" rel="stylesheet" type="text/css" />
	    <style type="text/css">
	        html, body
	        {
	            height:100%;
	            padding:0px;
	            margin:0px;
	        }
	    </style>

    @RenderSection("Styles", false)

     <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", false)
    
 </head>
<body>

    <div class="page">
        <header>
            <div id="title">
             <img src="../../Images/2_Telia_Full_R_(PC).png" style="float:left; height:175px; width:400px; margin-left:-55px"/>
             <h1 style="float: left;  margin: 67px 0 0 -38px;">Core</h1>
            </div>
            <div style="clear:both"></div>
           
           @if (true)
           {
               /*Request.IsAuthenticated*/
              <nav>
                <ul id="menu">
                    @Html.ActionTopMenuItem("Dags Dato", "Index", "Home")
                    @Html.ActionTopMenuItem("Book møde", "Create", "Booking")
                    @Html.ActionTopMenuItem("Kontakter", "Index", "Contact")
                    @Html.ActionTopMenuItem("Lokaler", "Index", "Location")
                    @Html.ActionTopMenuItem("Chat", "Index", "Chat")
                    @Html.ActionTopMenuItem("Admin", "Index", "Admin")
                </ul>
            </nav>
           }
        </header>
        <section id="main">
         <div id="logindisplay">
         <img src="../../Images/logo.png" /><br/>
                @Html.Partial("_LogOnPartial")
            </div>

               @RenderSection("Content", required : false)
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
    <script type="text/javascript">
        $("#menu li").click(function () {
            $("#menu li").removeClass("selected");
            $(this).toggleClass("selected");
        });
</script>
</body>
</html>
