@using TeliaCore.HtmlHelpers
@{
    ViewBag.Title = "Kalender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="../../Content/Kalenders/dhtmlxscheduler.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
	        html, body
	        {
	            height:100%;
	            padding:0px;
	            margin:0px;
	        }
	    </style>
}
@section Scripts
{
 <script src="../../Scripts/Kalender/dhtmlxscheduler.js" type="text/javascript"></script>
	    <script type="text/javascript">
	        function init() {
	            scheduler.config.xml_date = "%m/%d/%Y %H:%i";
	            scheduler.init("scheduler_here", new Date(2010, 6, 1), "month");
	            scheduler.load("/Kalender/Data");

	            var dp = new dataProcessor("/Kalender/Save");
	            dp.init(scheduler);
	            dp.setTransactionMode("POST", false);
	        }
	    </script>
         <script type="text/javascript">
             window.onload = init; 
	    </script>
}
<div class="contentWrap"><!--NAVIGATION-->
   <div class="leftContent" style="float:left; width:220px">
        <ul class="navigation">
            @Html.ActionSideMenuItem("Dagens bookinger", "Index", "Home")
            @Html.ActionSideMenuItem("Kommende bookinger", "Index", "Kalender")
            @Html.ActionSideMenuItem("Kalender", "Index", "Kalender")
        </ul>
        &nbsp;
</div>
    <h3 class="bookingbodyh3">Dags dato: @DateTime.Today.ToShortDateString()</h3>
    <div id="bookingItemList" style="">
        
      <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;'>
			<div class="dhx_cal_navline">
				<div class="dhx_cal_prev_button">&nbsp;</div>
				<div class="dhx_cal_next_button">&nbsp;</div>
				<div class="dhx_cal_today_button"></div>
				<div class="dhx_cal_date"></div>
				<div class="dhx_cal_tab" name="day_tab" style="right:204px;"></div>
				<div class="dhx_cal_tab" name="week_tab" style="right:140px;"></div>
				<div class="dhx_cal_tab" name="month_tab" style="right:76px;"></div>
			</div>
			<div class="dhx_cal_header">
			</div>
			<div class="dhx_cal_data">
			</div>		
		</div>
    </div>


</div>





