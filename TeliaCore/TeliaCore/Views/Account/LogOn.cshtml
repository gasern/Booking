@model TeliaCore.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<h2>Telia Core - Log ind</h2>
<p>
    Log ind til din profil herunder @Html.ActionLink("Registrer", "Register") Hvis ikke du har en profil.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Log ind fejlede, ret følegnde og prøv igen")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Bruger oplysninger</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Log ind" />
            </p>
        </fieldset>
    </div>
}
